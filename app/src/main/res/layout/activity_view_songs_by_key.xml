<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ViewSongsByKeyActivity">

        <HorizontalScrollView
            android:id="@+id/chipsForParts"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/partsChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_entrance"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />
                        <!-- preferred: @style/Theme.MaterialComponents-->
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_mercy"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_glory"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_psalm"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_alleluia"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_offertory"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_peace"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_lambGod"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_communion"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_postCommunion"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_mary"
                            android:onClick="chipClicked" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipBackgroundColor="@color/chip_style"
                            android:theme="@style/Theme.MaterialComponents"
                            android:text="@string/chip_exit"
                            android:onClick="chipClicked" />
                </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/chipsForSeasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="3dp"
            android:paddingEnd="5dp"
            android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/seasonsChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_ordinary"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />
                        <!-- preferred: @style/Theme.MaterialComponents-->
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_lent"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_easter"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_pentecost"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_advent"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="chipClicked"
                            android:text="@string/chip_christmas"
                            android:theme="@style/Theme.MaterialComponents"
                            app:chipBackgroundColor="@color/chip_style" />

                </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <ListView
            android:id="@+id/lvListSongsByTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partsChipGroup">

        </ListView>

</LinearLayout>